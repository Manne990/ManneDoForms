<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
		xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:component="clr-namespace:ManneDoForms.Components.DropDownView;assembly=ManneDoForms" 
		x:Class="ManneDoForms.Samples.DropDownViewPage"
		BackgroundColor="Silver">
	<ContentPage.Content>
		<Grid>
		    <Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition Height="40" />
		        <RowDefinition Height="*" />
		    </Grid.RowDefinitions>

		    <Grid.ColumnDefinitions>
		        <ColumnDefinition Width="*" />
		    </Grid.ColumnDefinitions>

			<Label Grid.Row="0" Grid.Column="0" BackgroundColor="White" TextColor="Black" Text="{Binding SelectedItem}" />
			
			<component:ManneDropDownView 
				Grid.Row="1"
				Grid.Column="0"
				BackgroundColor="White"
				ItemsSource="{Binding DummyItems}"
				SelectedItem="{Binding SelectedItem, Mode=TwoWay}" 
				VerticalOptions="FillAndExpand"
				HeightRequest="30" />
	    </Grid>
	</ContentPage.Content>
</ContentPage>