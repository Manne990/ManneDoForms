<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:component="clr-namespace:ManneDoForms.Components.RangeSliderView;assembly=ManneDoForms" 
	x:Class="ManneDoForms.Samples.RangeSliderViewPage"
	Title="RangeSliderView">

	<ContentPage.Content>
		<StackLayout BackgroundColor="Black" Padding="20,40,20,20" Spacing="50">
	    	<component:ManneRangeSliderView 
				BackgroundColor="Transparent"
				ActiveBarColor="#e1000e"
				InactiveBarColor="#4b4b4d"
				HandleImageSource="handle.png"
	    		MinValue="0" 
	    		MaxValue="35" 
	    		Step="1" 
	    		ShowBubbles="true" 
	    		FontSize="16"
	    		BubbleImageSource="bubble.png"
	    		LeftValue="10" 
	    		RightValue="20" />

    		<component:ManneRangeSliderView 
				BackgroundColor="Transparent"
				ActiveBarColor="#e1000e"
				InactiveBarColor="#4b4b4d"
				HandleImageSource="handle.png"
    			MinValue="0" 
    			MaxValue="20000" 
    			Step="100" 
    			ShowBubbles="true"
	    		FontSize="16"
    			BubbleImageSource="bubble.png"
    			LeftValue="500" 
    			RightValue="15000" />
		</StackLayout>
	</ContentPage.Content>

</ContentPage>